.page-header
  h1 Profiles

table.table.table-striped
  thead
    tr
      th Id
      th Name
      th Description
      th Language
      th Welcome button1
      th Welcome button2
      th Welcome button3
      th.actions

  tbody
    - @profiles.each do |profile|
      tr
        td = profile.id
        td = profile.name
        td = profile.description
        td = profile.language_id
        td = profile.welcome_button1
        td = profile.welcome_button2
        td = profile.welcome_button3
        td
          = link_to 'Edit', edit_profile_path(profile), class: 'btn btn-default btn-xs'
          '
          = link_to 'Destroy', profile, data: {:confirm => 'Are you sure?'}, :method => :delete, class: 'btn btn-xs btn-danger'

= link_to 'New Profile', new_profile_path
